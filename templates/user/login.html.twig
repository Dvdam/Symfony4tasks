{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/login.css') }}" rel="stylesheet"/>
{% endblock %}
{% block body %}

    <div class="row login">
        <!-- <img class="responsive-img" style="width: 250px;" src="https://i.imgur.com/ax0NCsK.gif" /> -->
        <div class="section"></div>
        <div class="col s12 l4 offset-l4">
            <div class="card hoverable">
                <div class="card-action teal lighten-1 white-text">
                    <h3 class="center-align">Login</h3>
                </div>
                {% if error %}
                    <div class="row" id="alert_box">
                        <div class="col s12">
                            <div class="card red darken-1">
                                <div class="row">
                                    <div class="col s12 m10">
                                        <div class="card-content white-text">
                                            {{ error.messagekey|trans(error.messageData, 'security') }}
                                        </div>
                                    </div>
                                    <div class="col s12 m2">
                                        <i aria-hidden="true" class="material-icons prefix icon_close" id="alert_close">close</i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="card-content">
                    <form id="login" action="{{ path('login') }}" method="post">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">mail_outline</i>
                                <input class="validate" id="username" type="email" name="_username" value="{{ last_username }}">
                                <label for="username">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input class="validate" id="password" name="_password" type="password">
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <br/>
                        <center>
                            <div class='row'>
                                <button class='col s12 btn btn-large waves-effect eal lighten-1 white-text' name='btn_login' type='submit'>Login</button>
                            </div>
                        </center>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('/assets/js/login.js') }}"></script>
{% endblock %}
